<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItalyConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItalyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ItalyconstraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ItalyImageView"
                android:layout_width="408dp"
                android:layout_height="277dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription,MissingConstraints" />

            <ProgressBar
                android:id="@+id/ItalyProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="63dp"
                android:layout_height="67dp"
                app:layout_constraintBottom_toBottomOf="@+id/ItalyImageView"
                app:layout_constraintEnd_toEndOf="@+id/ItalyImageView"
                app:layout_constraintStart_toStartOf="@+id/ItalyImageView"
                app:layout_constraintTop_toTopOf="@+id/ItalyImageView" />

            <TextView
                android:id="@+id/ItalyTextView"
                android:layout_width="408dp"
                android:layout_height="421dp"
                android:layout_marginTop="15dp"
                android:text="@string/italy"
                app:layout_constraintTop_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="3dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>